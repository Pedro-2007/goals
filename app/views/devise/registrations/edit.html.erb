<h2 class="text-3xl font-bold text-gray-800 mb-6">Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "max-w-md mx-auto bg-white p-8 rounded-lg shadow-md" }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="field mb-6">
    <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
</div>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
<div class="mb-6 text-gray-700">Aguardando confirmação para: <%= resource.unconfirmed_email %></div>
<% end %>

<div class="field mb-6">
    <%= f.label :password, "Senha", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <i class="text-gray-600 text-sm">(deixe em branco se você não quiser alterá-la)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <% if @minimum_password_length %>
    <br />
    <em class="text-gray-600 text-sm">Mínimo de <%= @minimum_password_length %> caracteres</em>
    <% end %>
</div>

<div class="field mb-6">
    <%= f.label :password_confirmation, "Confirmação de senha", class: "block text-gray-700 text-sm font-bold mb-2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
</div>

<div class="field mb-6">
    <%= f.label :current_password, "Senha atual", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <i class="text-gray-600 text-sm">(precisamos de sua senha atual para confirmar as alterações)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
</div>

<div class="actions">
    <%= f.submit "Atualizar", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md transition duration-300" %>
</div>
<% end %>

<div class="mt-8">
    <h3 class="text-2xl font-bold text-gray-800 mb-4">Cancelar minha conta</h3>

    <div class="flex items-center gap-2 text-gray-700">
        Não está satisfeito?
        <%= button_to "Cancelar minha conta", registration_path(resource_name), 
            data: { confirm: "Você tem certeza?", turbo_confirm: "Você tem certeza?" }, 
            method: :delete,
            class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-md transition duration-300" %>
    </div>
</div>

<%= link_to "Voltar", :back, class: "inline-block mt-6 text-blue-500 hover:text-blue-600" %>